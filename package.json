{
  "name": "@fjedi/graphql-shield",
  "description": "GraphQL Server permissions as another layer of abstraction!",
  "keywords": [
    "fjedi",
    "graphql",
    "acl",
    "access rules",
    "access policy"
  ],
  "version": "0.0.4",
  "private": false,
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "files": [
    "lib/"
  ],
  "author": "Alexander Radyushin <r.alex.andr@ya.ru> (fork of maticzav/graphql-shield)",
  "homepage": "https://github.com/fjedi/graphql-shield",
  "repository": {
    "type": "git",
    "url": "https://github.com/fjedi/graphql-shield.git"
  },
  "dependencies": {
    "@types/yup": "0.29.13",
    "object-hash": "^2.0.3",
    "yup": "0.32.9"
  },
  "devDependencies": {
    "@graphql-tools/schema": "8.1.2",
    "@types/expect": "24.3.0",
    "@types/jest": "27.0.1",
    "@types/node": "14.17.12",
    "@types/object-hash": "1.3.4",
    "@types/request-promise-native": "1.0.18",
    "@typescript-eslint/eslint-plugin": "4.29.3",
    "@typescript-eslint/parser": "4.29.3",
    "apollo-server": "2.25.2",
    "eslint": "7.32.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-prettier": "3.4.1",
    "graphql": "15.5.2",
    "graphql-middleware": "6.1.4",
    "husky": "7.0.2",
    "jest": "27.1.0",
    "lint-staged": "11.1.2",
    "prettier": "2.3.2",
    "request-promise-native": "1.0.9",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.5",
    "typescript": "4.4.2"
  },
  "peerDependencies": {
    "graphql": "^14.0.0 || ^15.0.0",
    "graphql-middleware": "6.1.4"
  },
  "license": "MIT",
  "lint-staged": {
    "*.(js|jsx|ts|tsx)": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watchAll",
    "build": "npm run clean && tsc -p tsconfig.json && tsc -p tsconfig-cjs.json",
    "clean": "rimraf lib",
    "coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "tsc -w",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "prettier": "prettier --write ."
  }
}
